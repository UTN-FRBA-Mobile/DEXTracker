<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_dex_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/widget_dex_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/pokemon_icon"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/widget_dex_completion"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_toEndOf="@+id/widget_dex_title"
        android:gravity="center"
        android:text="@string/_0_0" />

    <TextView
        android:id="@+id/widget_dex_title"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@+id/widget_dex_icon"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
